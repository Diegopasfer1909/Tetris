<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mainpakage.sprites.CustomView
        android:id="@+id/CustomView"
        android:layout_width="258dp"
        android:layout_height="472dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274" />


    <Button
        android:id="@+id/flechaizq"
        android:layout_width="95dp"
        android:layout_height="64dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:text="@string/izquierda"
        app:layout_constraintBottom_toTopOf="@+id/flechabajo"
        app:layout_constraintEnd_toStartOf="@+id/flechader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CustomView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/scorebackground"
        android:layout_width="92dp"
        android:layout_height="159dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CustomView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/score" />

    <TextView
        android:id="@+id/valorPuntuacion"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/scorebackground"
        app:layout_constraintStart_toStartOf="@+id/scorebackground"
        app:layout_constraintTop_toTopOf="@+id/scorebackground"
        app:layout_constraintVertical_bias="0.702" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="105dp"
        android:layout_height="150dp"
        android:layout_marginStart="273dp"
        android:layout_marginLeft="273dp"
        android:layout_marginBottom="114dp"
        app:layout_constraintBottom_toTopOf="@+id/Switch"
        app:layout_constraintStart_toStartOf="@+id/CustomView"
        app:layout_constraintTop_toBottomOf="@+id/scorebackground"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/nextpiecebackground"
        android:layout_width="65dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/scorebackground"
        app:layout_constraintVertical_bias="0.939"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <Button
        android:id="@+id/flechader"
        android:layout_width="95dp"
        android:layout_height="64dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:layout_marginBottom="15dp"
        android:text="derecha"
        app:layout_constraintBottom_toTopOf="@+id/flechabajo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flechaizq"
        app:layout_constraintTop_toBottomOf="@+id/CustomView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/flechabajo"
        android:layout_width="107dp"
        android:layout_height="60dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="77dp"
        android:layout_marginBottom="28dp"
        android:text="abajo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/girar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CustomView" />

    <ImageButton
        android:id="@+id/girar"
        android:layout_width="107dp"
        android:layout_height="105dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="76dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/flechader"
        app:layout_constraintTop_toBottomOf="@+id/nextpiecebackground"
        app:layout_constraintVertical_bias="0.951"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <Button
        android:id="@+id/Switch"
        android:layout_width="83dp"
        android:layout_height="50dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="36dp"
        android:text="Switch"
        app:layout_constraintBottom_toTopOf="@+id/girar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CustomView" />

</androidx.constraintlayout.widget.ConstraintLayout>
